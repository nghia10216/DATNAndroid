<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".screen.nganh.fragment.NganhFragment">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/dp_16"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/teal_700"
            android:text="Tên ngành"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:id="@+id/tennganhTextView"
            android:padding="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/gioithieunganhCardView"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                card_view:cardCornerRadius="19dp"
                card_view:cardElevation="6dp"
                android:layout_margin="16dp"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_150"
                card_view:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:background="@color/divider"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="87dp"
                        android:layout_height="80dp"
                        android:layout_margin="@dimen/dp_8"
                        android:src="@drawable/overview" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:src="@drawable/dotted"
                        android:layerType="software" />
                    <TextView
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:textColor="@color/teal_700"
                        android:textSize="@dimen/sp_20"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Giới thiệu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/congviecvanoilamviecCardView"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                card_view:cardCornerRadius="19dp"
                card_view:cardElevation="6dp"
                android:layout_margin="16dp"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_150"
                card_view:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:background="@color/divider"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/worklight"
                        android:layout_margin="@dimen/dp_8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:src="@drawable/dotted"
                        android:layerType="software" />
                    <TextView
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:textColor="@color/teal_700"
                        android:textSize="@dimen/sp_20"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Công việc và nơi làm việc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/khungchuongtrinhdaotaoCardView"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        card_view:cardCornerRadius="19dp"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        card_view:cardElevation="6dp"
        card_view:cardPreventCornerOverlap="false">
        <LinearLayout
            android:background="@color/divider"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/download"
                android:layout_margin="@dimen/dp_8"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dotted"
                android:layerType="software" />
            <TextView
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:textColor="@color/teal_700"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Khung chương trình đào tạo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>